@model IEnumerable<ITPM.Models.NewMemberClass>

@{
    ViewData["Title"] = "Member Managment";
}

<script src="~/lib/jquery/dist/jquery.js"></script>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css" />



    <style>
        h1.hh {
            color: #235CCD;
            font-family: Roboto;
            text-align: center;
            font-weight: bold;
            text-shadow: 2px 2px 8px #ABB2B9;
            font-size: 45px;
        }



        h4.hhh {
            color: black;
            font-family: Roboto;
            text-align: center;
            font-weight: bold;
            font-size: 35px;
            text-shadow: 0px 0px 5px #235CCD;
        }



        th {
            font-size: 20px;
            font-family: Roboto;
            font-weight: bold;
            padding: 8px;
            text-align: center
        }



        td {
            font-size: 17px;
            font-family: Roboto;
            font-weight: normal;
            padding: 8px;
            text-align: center
        }



            td.btnsE {
                filter: drop-shadow(8px 8px 10px gray);
            }



            td.btnsD {
                filter: drop-shadow(8px 8px 10px gray);
            }

            td.btnsO {
                filter: drop-shadow(8px 8px 10px gray);
            }




        table {
            border-collapse: collapse;
            width: 110%;
        }



        tr:nth-child(even) {
            background-color: #f2f2f2;
        }



        p {
            padding-top: 40px;
        }



        th {
            color: #235CCD;
            background: #f2f2f2;
        }

        /*         .my-custom-scrollbar {
                    position:page;
                    height: 500px;
                    overflow: auto;
                }

                .table-wrapper-scroll-y {
                    display: block;
                }

           */
    </style>
</head>

<h1 class="hh">Member Management</h1>
<hr style="height:1px; border-width:0; color: gray; background-color: #235CCD" />

@*<div class="addordersButton" style="position:absolute;margin-left:15px;margin-top:25px">*@
<p>
    <a asp-action="Create" data-toggle="tooltip" title="You can Add New Members here!! "
       class="btn btn-primary" style="position:absolute; margin-left:15px;" ;>Add New Member +</a>
</p>
<form method="get" asp-action="Index">
    <p style="padding-left:25em;">
        <input type="search" placeholder=" Enter Member Name Or Email" value=" @ViewData["Getmemberdetails"] " name="Membsearh" style="width: 500px; border-radius: 15px; padding:1px;" />
        <input type="submit" value="search" class="btn btn-primary" />
        <a asp-action="Index"> List All Members</a>
    </p>
</form>

<div class="table-wrapper-scroll-y my-custom-scrollbar">

    <table class="p rounded border" style="background-color: #D3D3D3;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Mid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pnumber)
                </th>
                <th></th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pnumber)
                </td>
                <td class="btnsO">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Mid }, new { @class = "btn btn-outline-success" })
                </td>
                <td class="btnsE">
                    @Html.ActionLink("Details", "Details", new { id = item.Mid }, new { @class = "btn btn-outline-info" })
                </td>
                <td class="btnsD">
                    @Html.ActionLink("Remove", "Delete", new { id = item.Mid }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>

    <script type="text/javascript">
$(document).ready( function () {
$('#myTable').DataTable({
dom: 'Bfrtip',
buttons: [
'copy', 'csv', 'excel', 'pdf', 'print'
]
});
} );
$(function(){
var save = '@TempData["save"]'
if(save!='') {
alertify.success(save);
}
var edit = '@TempData["edit"]'
if(edit!='') {
alertify.success(edit);
}
var del = '@TempData["delete"]'
if (del!='') {
alertify.error(del);
}
})


//tooltip
$(document).ready(function () {
$('[data-toggle="tooltip"]').tooltip();
});

    </script>
}

