@model ITPM.Models.CoachClass

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout4";
}
<style>
    h1.hh {
        color: #235CCD;
        font-family: Roboto;
        text-align: center;
        font-weight: bold;
        text-shadow: 2px 2px 8px #ABB2B9;
        font-size: 45px;
    }

    h4.hhh {
        color: black;
        font-family: Roboto;
        text-align: center;
        font-weight: bold;
        font-size: 35px;
        text-shadow: 0px 0px 5px #235CCD;
    }

    h4.confirmation {
        color: #FF0000;
        font-family: Roboto;
        text-align: center;
        font-weight: bold;
        font-size: 40px;
        /* text-shadow: 0px 0px 2px black;*/
        -webkit-text-stroke: 1px black;
    }

    div.col-8.col-4 {
        font-size: 20px;
        font-family: Roboto;
        font-weight: normal;
    }

    div.col-3 {
        font-size: 20px;
        font-family: Roboto;
        font-weight: bold;
        color: black;
        text-align: center;
        filter: drop-shadow(8px 8px 10px #696969);
    }

    div.col-8 {
        font-size: 20px;
        font-family: Roboto;
        font-weight: bold;
        color: #235CCD;
    }

    div.del {
        padding-top: 5em;
    }

    .dellogo {
        padding-left: 515px;
        width: 60%;
    }
</style>

<h1 class="hh">Coaches Management</h1>

<h4 class="hhh">Delete Coach</h4>

<hr style="height: 2px; border-width: 0; color: gray; background-color: #235CCD" />

<img src="~/Images/Coaches/del2 copy 2.gif" class="dellogo">
<br />

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row" style="background-color: #D3D3D3" ; filter: drop-shadow(8px 8px 10px gray); margin-bottom: 40px">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CoachID"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="CoachID" />
                    <input asp-for="CoachID" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="CoachID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cname"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Cname" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Cname" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CAge"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CAge" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="CAge" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="contactnumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="contactnumber" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="contactnumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Description" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Rate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Rate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ImageName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ImageName" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            Uploaded Image
            <img src="@("~/images/coaches/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
            <div class="del">
                <form class="delete" asp-action="Delete">
                    <input type="submit" asp-action="Delete" asp-route-id="@Model.CoachID" class="btn btn-outline-danger" value="Delete" />
                    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}