@model ITPM.Models.FeedbackClass

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout8";
}

<style>
    h1.hh {
        color: #235CCD;
        font-family: Roboto;
        text-align: center;
        font-weight: bold;
        text-shadow: 2px 2px 8px #ABB2B9;
        font-size: 45px;
    }

    h4.hhh {
        color: black;
        font-family: Roboto;
        text-align: center;
        font-weight: bold;
        font-size: 35px;
        text-shadow: 0px 0px 5px #235CCD;
    }

    div.col-8.col-4 {
        font-size: 20px;
        font-family: Roboto;
        font-weight: normal;
    }

    div.col-3 {
        font-size: 20px;
        font-family: Roboto;
        font-weight: bold;
        color: black;
        text-align: center;
        filter: drop-shadow(8px 8px 10px #696969);
    }

    div.col-8 {
        font-size: 20px;
        font-family: Roboto;
        font-weight: bold;
        color: #235CCD;
    }

    div.form-group1 {
        padding-top: 22em;
    }
</style>

<h1 class="hh">Feedback Management</h1>

<h4 class="hhh">Update Feedback Details</h4>

<hr style="height: 2px; border-width: 0; color: gray; background-color: #235CCD" />


<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row" style=" background-color: #D3D3D3; filter: drop-shadow(8px 8px 10px gray); margin-bottom: 40px">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FeedID"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="FeedID" />
                    <input asp-for="FeedID" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="FeedID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FName" class="form-control" />
                </div>
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="LName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="LName" class="form-control" />
                </div>
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FeedType"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FeedType" class="form-control" />
                </div>
                <span asp-validation-for="FeedType" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FeedDes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FeedDes" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="FeedDes" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="St_01"></label>
                </div>
                <div class="col-8">
                    <input asp-for="St_01" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="St_01" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="St_02"></label>
                </div>
                <div class="col-8">
                    <input asp-for="St_02" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="St_02" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Rate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Rate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            @*<div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ImageName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ImageName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="ImageName" class="text-danger"></span>
                </div>*@

        </div>
        <div class="col-1"></div>
        <div class="col-3">
            @*Uploaded Image
                <img src="@("~/images/items/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />*@
            <div class="form-group1">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                    <a asp-action="FeedIn" value="Back" class="btn btn-outline-dark">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}